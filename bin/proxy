#!/usr/bin/env node
 
var httpProxy = require('http-proxy');
 
var proxy = httpProxy.createServer(function (req, res, proxy) {
  if (/^\/api/.exec(req.url)) {
    backendPort = 6000;
  } else {
    backendPort = 4200;
  }
 
  proxy.proxyRequest(req, res, {
    host: "127.0.0.1",
    port: backendPort
  });
 
});
 
port =  8080;
 
proxy.listen(port, function() {
  console.log("Proxying port " + port);
});