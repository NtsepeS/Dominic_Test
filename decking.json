{
  "images": {
    "cops/backend" : "dockerfiles/backend",
    "cops/nginx" : "dockerfiles/nginx"
  },

  "containers": {
    "cops-database": {
      "image": "postgres",
      "env"  : ["POSTGRES_USER=cops-api"]
    },
    "cops-backend": {
      "image": "cops/backend",
      "dependencies": [
        "cops-database"
      ]
    },
    "cops-webserver": {
      "image": "cops/nginx",
      "port" : ["5000:80"],
      "dependencies": [
        "cops-backend"
      ]
    }
  },

  "clusters": {
    "main": ["cops-backend","cops-database", "cops-webserver"]
  }

}