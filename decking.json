{
  "images": {
    "cops/backend" : "dockerfiles/backend",
    "nginx" : "dockerfiles/nginx"
  },

  "containers": {
    "cops-database": {
      "image": "postgres",
      "env"  : ["POSTGRES_USER=root"]
    },
    "cops-backend": {
      "image": "cops/backend",
      "port" : ["5000:5000","5001:22"],
      "dependencies": [
        "cops-database"
      ]
    }
  },

  "clusters": {
    "main": ["cops-backend","cops-database"]
  }

}