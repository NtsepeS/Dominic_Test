<table class="table c-authz-details">
  <tr>
    <th>Name</th>
    <td class="c-authz-details__name">{{name}}</td>
  </tr>
  <tr>
    <th>Email</th>
    <td>{{email}}</td>
  </tr>
  <tr>
    <th>Invited by</th>
    <td class="c-authz-details__invited-by">{{invited_by}}</td>
  </tr>
  <tr>
    <th>Role</th>
    <td>{{role}}</td>
  </tr>
</table>

<button class="btn btn-danger" {{ action 'delete' }}>
  <span class="glyphicon glyphicon-trash"></span>
  Remove
</button>
