<div class="container">
  <section class="row">
    <h2>Service Fragment</h2>
    <div class="row show">
      <label class="col-sm-2 control-label">Work Order #:</label>
        {{model.workOrderNumber}}
    </div>
    <div class="row show">
      <label class="col-sm-2 control-label">Line Speed:</label>
        {{model.lineSpeed}} Mbps
    </div>
    <div class="row show">
      <label class="col-sm-2 control-label">Service Type:</label>
        {{model.serviceType}}
    </div>
    <div class="row show">
      <label class="col-sm-2 control-label">Physical Mode:</label>
        {{model.physicalMode}}
    </div>

    <h3>Services:</h3>
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Line Tag</th>
          <th>Line Speed (Mbps)</th>
          <th>VLANS</th>
        </tr>
      </thead>
      <tbody>
    {{#each service in model.services}}
      {{#link-to 'service' service.id tagName="tr"}}
        <td></td>
        <td>{{service.linetag}}</td>
        <td>{{service.lineSpeed}}</td>
        <td>{{service.vlan}}</td>
      {{/link-to}}
    {{/each}}
      </tbody>
    </table>

    <div class="row pull-right">
      {{#link-to 'service-fragments.edit' model.id}}
      <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button>
      {{/link-to}}
      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#prompt-modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete</button>
    </div>
  </section>
</div>

{{prompt-modal action="removeServiceFragment"}}
