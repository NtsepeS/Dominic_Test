<form class="form-horizontal">
  <div class="form-group">
    <label for="user-email" class="col-md-2 control-label">Email</label>
    <div class="col-md-10 control">
      {{input id="user-email" placeholder="Email address" class="form-control" type="email" value=model.email }}
    </div>
  </div>
  <div class="form-group">
    <label for="user-name" class="col-md-2 control-label">Name</label>
    <div class="col-md-10 control">
      {{input id="user-name" placeholder="Name" class="form-control" value=model.name }}
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <button class="btn btn-default" {{ action 'sendInvite' }}>Invite</button>
    </div>
  </div>
</form>
