<div class="container">
  <section class="row">
    <h2>Base Station Sector</h2>
    <form class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-2 control-label">Name:</label>
        <div class="col-sm-10 base-station-sector__name">
          {{input value=model.name class="form-control"}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Status:</label>
        <div class="col-sm-10">
        {{view "select"
          contentBinding="statuses"
          optionValuePath="content.id"
          optionLabelPath="content.name"
          selection=model.status.content
          prompt="Please Select"
          class="form-control base-station-sector__status"
        }}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Sector:</label>
        <div class="col-sm-10 base-station-sector__sector">
        {{input value=model.sector class="form-control"}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Base Station Unit:</label>
        <div class="col-sm-10">
        {{view "select"
          contentBinding="baseStationUnits"
          optionValuePath="content.id"
          optionLabelPath="content.name"
          selection=model.baseStationUnit.content
          prompt="Please Select"
          class="form-control base-station-sector__base-station-unit"
        }}
        </div>
      </div>
    </form>

    <button type="button" class="btn btn-primary pull-right qa-save" {{action "saveBaseStationSector"}}>Save</button>
  </section>
</div>
