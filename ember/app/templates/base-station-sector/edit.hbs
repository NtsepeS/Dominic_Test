<div class="container">
  <section class="row">
    <h2>Base Station Sectors</h2>
    <form class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-3 control-label">Name:</label>
        <div class="col-sm-9">
          {{input value=model.name class="form-control"}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label">Status:</label>
        <div class="col-sm-9">
        {{view "select"
          contentBinding="statuses"
          optionValuePath="content"
          optionLabelPath="content.name"
          selection=model.status.content
        }}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label">Sector:</label>
        <div class="col-sm-9">
        {{input value=model.sector class="form-control"}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label">Base Station Unit:</label>
        <div class="col-sm-9">
        {{view "select"
          contentBinding="baseStationUnits"
          optionValuePath="content"
          optionLabelPath="content.name"
          selection=model.baseStationUnit.content
        }}
        </div>
      </div>
    </form>

    <button type="button" class="btn btn-primary pull-right" {{action "saveBaseStationUnit"}}>Save</button>
  </section>
</div>
