    <li role="presentation"><a href="#notes" aria-controls="notes" role="tab" data-toggle="tab">Notes</a></li>
    <li role="presentation"><a href="#quality_assurance" aria-controls="quality_assurance" role="tab" data-toggle="tab">Quality Assurance</a></li>
    <li role="presentation"><a href="#pictures" aria-controls="pictures" role="tab" data-toggle="tab">Pictures</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="site_information">
      {{partial "client-link/edit/site-information"}}
    </div>
    <div role="tabpanel" class="tab-pane fade" id="siebel">
      {{partial "client-link/edit/siebel"}}
    </div>
    <div role="tabpanel" class="tab-pane fade" id="rf_performance">
      {{partial "client-link/edit/rf-performance"}}
    </div>
    <div role="tabpanel" class="tab-pane fade" id="modulation">
      {{partial "client-link/edit/modulation"}}
    </div>
    <div role="tabpanel" class="tab-pane fade" id="physical_ports">
      {{partial "client-link/edit/physical-ports"}}
    </div>
    <div role="tabpanel" class="tab-pane fade" id="service_fragments">
      {{partial "client-link/edit/service-fragments"}}
    </div>
    <div role="tabpanel" class="tab-pane fade" id="notes">
      {{partial "client-link/edit/notes"}}
    </div>
    <div role="tabpanel" class="tab-pane fade" id="quality_assurance">
      {{partial "client-link/edit/quality-assurance"}}
    </div>
    <div role="tabpanel" class="tab-pane fade" id="pictures">
      {{partial "client-link/edit/pictures"}}
    </div>
  </div>
</div>

