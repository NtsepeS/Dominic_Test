<div class="actions">
  {{#link-to 'client-link.edit'}}
    <span class="glyphicon glyphicon-eye-open js-actions view" aria-hidden="true"></span>
  {{/link-to}}
  <span class="glyphicon glyphicon-trash js-actions delete" aria-hidden="true" {{action "removeClientLink"}} ></span>
  {{#link-to 'client-link.audit'}}
    <span class="glyphicon glyphicon-list-alt js-actions audit" aria-hidden="true"></span>
  {{/link-to}}
  <span class="glyphicon glyphicon-floppy-disk js-actions save" aria-hidden="true" {{action "acceptChanges"}}></span>
</div>

<div role="tabpanel">
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#site_information" aria-controls="site_information" role="tab" data-toggle="tab">Site Information</a></li>
    <li role="presentation"><a href="#siebel" aria-controls="siebel" role="tab" data-toggle="tab">Siebel</a></li>
    <li role="presentation"><a href="#rf_performance" aria-controls="rf_performance" role="tab" data-toggle="tab">RF Performance</a></li>
