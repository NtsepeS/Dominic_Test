<div class="container">
  <section class="row">
    <h2>Site Information</h2>
    <div class="row row_element">
      <div class="col-md-2">
        Client:
      </div>
      <div class="col-md-3">
        {{client.name}}
      </div>
      <div class="col-md-2"></div>

      <div class="col-md-2">
        Branch Name:
      </div>
      <div class="col-md-3">
        {{branch}}
      </div>
    </div>

    <div class="row row_element">
      <div class="col-md-2">
        Status:
      </div>
      <div class="col-md-3">
          {{status.name}}
      </div>
      <div class="col-md-2"></div>
      <div class="col-md-2">
        Circuit Number:
      </div>
      <div class="col-md-3">
        {{circuitNumber}}
      </div>
    </div>

    <div class="row row_element">
      <div class="col-md-2">
        Network Operator:
      </div>
      <div class="col-md-3">
        {{networkOperator.name}}
      </div>
      <div class="col-md-2"></div>
      <div class="col-md-2">
        MSAD Number:
      </div>
      <div class="col-md-3">
        {{msadNumber}}
      </div>
    </div>

    <div class="row row_element">
      <div class="col-md-2">
        Link Type:
      </div>
      <div class="col-md-3">
        {{linkType.name}}
      </div>
      <div class="col-md-2"></div>
      <div class="col-md-2">
        Activation Date:
      </div>
      <div class="col-md-3">
        <!-- make a calendar popup -->
        {{activationDate}}
      </div>
    </div>

    <div class="row row_element">
      <div class="col-md-2">
        Sector Name:
      </div>
      <div class="col-md-3">
        {{baseStationSector.name}}
      </div>
      <div class="col-md-2"></div>
      <div class="col-md-2">
        Mac Address:
      </div>
      <div class="col-md-3">
        {{macAddress}}
      </div>
    </div>

    <div class="row row_element">
      <div class="col-md-2">
        Antenna Size:
      </div>
      <div class="col-md-3">
        {{antenna.size}}
      </div>
      <div class="col-md-2"></div>
      <div class="col-md-2">
        Distance:
      </div>
      <div class="col-md-3">
        {{distance}}
      </div>
    </div>
  </section>
</div>

{{#link-to 'client-link.site-information.edit' model.id}}
<button type="button" class="btn btn-success pull-right"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button>
{{/link-to}}
