<div class="container">
  <section class="row">
  <h2>New Service Fragment</h2>
  <form class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 control-label">Work Order #:</label>
      <div class="col-sm-10">
        {{input value=selectedWorkOrderNumber class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Line Speed (Mbps):</label>
      <div class="col-sm-10">
        {{view "select"
          content=lineSpeeds
          value=selectedLineSpeed
          prompt="Please Select"
          class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Service Type:</label>
      <div class="col-sm-10">
        {{view "select"
          content=serviceTypes
          value=selectedServiceType
          prompt="Please Select"
          class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Physical Mode:</label>
      <div class="col-sm-10">
        {{view "select"
          content=physicalModes
          value=selectedPhysicalMode
          prompt="Please Select"
          class="form-control"}}
      </div>
    </div>
  </form>
  <button type="button" class="btn btn-primary pull-right" {{action "saveServiceFragment"}}>Save</button>
  </section>
</div>
