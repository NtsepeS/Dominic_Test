<div class="container">
  <section class="row">
    <h2> Modulation </h2>

    {{#if radio.modulations.length}}
      <div class="table-responsive" cellspacing="0" width="100%">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>DL Min</th>
              <th>DL Max</th>
              <th>UL Min</th>
              <th>UL Max</th>
            </tr>
          </thead>
          <tbody>
            {{#each modulation in radio.modulations}}
              <tr>
                <td> name of modulation </td>
                <td>{{modulation.downlinkMin}} QAM</td>
                <td>{{modulation.downlinkMax}} QAM</td>
                <td>{{modulation.uplinkMin}} QAM</td>
                <td>{{modulation.uplinkMax}} QAM</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{#link-to 'client-link.modulation.edit'}}
      <button type="button" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button>
      {{/link-to}}

    {{else}}
      <div class="alert alert-warning" role="alert">There's no modulations configured on this Client Link.</div>
        {{#link-to 'client-link.modulation.new'}}
        <button type="button" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Add Modulation</button>
        {{/link-to}}
    {{/if}}

  </section>
</div>


