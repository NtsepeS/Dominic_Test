<div class="container">
  <section class="row c-index-radio">
    <h2>Radio</h2>

    {{#if model.radio}}

      <div class="panel panel-default">

        <div class="panel-heading">
          <span class="panel-title">Radio Details</span>
        </div>

        <div class="panel-body">
          <div class="row row_element">
            <label class="col-sm-3">Name</label>
            <div class="col-md-2">
              {{model.radio.name}}
            </div>
          </div>

          <div class="row row_element">
            <label class="col-sm-3">Item Code</label>
            <div class="col-sm-2">
              {{model.radio.itemCode}}
            </div>
          </div>

          <div class="row row_element">
            <label class="col-sm-3">Icasa Sticker</label>
            <div class="col-md-2">
              {{model.radio.icasaSticker}}
            </div>
          </div>

        </div>

      </div>

    {{else}}
      {{alert-message alertType="alert-info" message="A radio should exist before being able to configure RF Perfomance and Modulation." }}
      {{#link-to 'client-link.radio.new'}}
      <button type="button" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Add Radio</button>
      {{/link-to}}
    {{/if}}

  </section>
</div>


