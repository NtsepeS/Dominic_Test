<div class="container">
  <section class="row">
    <h2> Modulation </h2>

    {{#if radio.modulations.length}}
      <div class="table-responsive" cellspacing="0" width="100%">
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>DL Min</th>
              <th>DL Max</th>
              <th>UL Min</th>
              <th>UL Max</th>
            </tr>
          </thead>
          <tbody>
            {{#each modulation in radio.modulations}}
              <tr>
                <td>{{modulation.modulationResultSet}}</td>
                <td>{{modulation.downlinkMin}}</td>
                <td>{{modulation.downlinkMax}}</td>
                <td>{{modulation.uplinkMin}}</td>
                <td>{{modulation.uplinkMax}}</td>
                <td>
                  {{#link-to 'modulation.edit' modulation.id}}
                    <span class="glyphicon glyphicon-edit pull-right" aria-hidden="true"></span>
                  {{/link-to}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>


    {{else}}
    {{alert-message alertType="alert-warning" message="There's no modulations configured on this Client Link."}}
        {{#link-to 'client-link.modulations.new'}}
        <button type="button" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Add Modulation</button>
        {{/link-to}}
    {{/if}}

  </section>
</div>


