<div class="container">
  <section class="row">
    <h2> RF Performance </h2>

    {{#if hasRfPerformanceParameters}}
      <div class="table-responsive" cellspacing="0" width="100%">
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>UL RSSI</th>
              <th>DL RSSI</th>
              <th>UL CNR</th>
              <th>DL CNR</th>
              <th>TX Power</th>
              <th>Step Attenuator</th>
            </tr>
          </thead>
          <tbody>
            {{#each parameter in proxy}}
              <tr {{bind-attr class="parameter.isCalculated:calculation-row"}}>
                <td>{{parameter.rfResultSet}}</td>
                <td>{{parameter.uplinkRssi}}</td>
                <td>{{parameter.downlinkRssi}}</td>
                <td>{{parameter.uplinkCnr}}</td>
                <td>{{parameter.downlinkCnr}}</td>
                <td>{{parameter.txPower}}</td>
                <td>{{parameter.stepAttenuator}}</td>
                <td>
                  {{#unless parameter.isCalculated}}
                    {{#link-to 'rf-performance-parameter.edit' parameter.id}}
                      <span class="glyphicon glyphicon-edit pull-right" aria-hidden="true"></span>
                    {{/link-to}}
                  {{/unless}}
                </td>
                <td>
                  {{#unless parameter.isCalculated}}
                    <span class="glyphicon glyphicon-trash pull-right" aria-hidden="true" {{action 'removeRFPerformance' parameter}} ></span>
                  {{/unless}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

    {{else}}
    {{alert-message alertType="alert-warning" message="There's no RF performance parameters configured on this Client Link." }}
    {{/if}}

    {{#link-to 'client-link.rf-performance-parameters.new'}}
    <button type="button" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Add RF Performance Parameters</button>
    {{/link-to}}
  </section>
</div>
