<div class="container">
  <section class="row">
    <h2>Base Station Unit
    {{#link-to 'base-station-unit.edit' model.id}}
      <button type="button" class="btn btn-success pull-right"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button>
    {{/link-to}}
    </h2>
    <div class="row row_element">
      <div class="col-md-2">
        <strong>Name:</strong>
      </div>
      <div class="col-md-3">
        {{model.name}}
      </div>
      <div class="col-md-2"></div>

      <div class="col-md-2">
        <strong>Status:</strong>
      </div>
      <div class="col-md-3">
        {{model.status.name}}
      </div>
    </div>

    <div class="row row_element">
      <div class="col-md-2">
        <strong>Core Node:</strong>
      </div>
      <div class="col-md-3">
          {{model.coreNode.name}}
      </div>
      <div class="col-md-2"></div>
    </div>
  </section>



  <section class="row">
    <h2>Base Station Sectors</h2>

    <table class="table c-service-fragment__service-table table-hover table-striped c-number-table">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Status</th>
          <th>Sector</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
    {{#if model.baseStationSectors.length}}
    {{#each sector in model.baseStationSectors}}
      {{#link-to 'base-station-sector' sector.id tagName="tr" class="c-number-row"}}
        <td class="c-number-data-column"></td>
        <td>{{sector.name}}</td>
        <td>{{sector.status.name}}</td>
        <td>{{sector.sector}}</td>
        <td>
          {{#link-to 'base-station-sector.edit' sector.id}}
            <span class="glyphicon glyphicon-edit pull-right" aria-hidden="true"></span>
          {{/link-to}}
        </td>
      {{/link-to}}
    {{/each}}
    {{else}}
      <tr>
        <td colspan="6">
          {{alert-message alertType="alert-warning" message="There's no base station sectors configured on this base station unit."}}
        </td>
      </tr>
    {{/if}}
      </tbody>
    </table>
  </section>
</div>

<button type="button" class="btn btn-danger pull-right" data-toggle="modal" data-target="#prompt-modal"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button>
{{prompt-modal action="removeBaseStationUnit"}}
