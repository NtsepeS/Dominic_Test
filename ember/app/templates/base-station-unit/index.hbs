<div class="container">
  <section class="row">
    <h2>Base Station Unit
    {{#link-to 'base-station-unit.edit' model.id class="base-station-unit__edit"}}
      <button type="button" class="btn btn-success pull-right"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button>
    {{/link-to}}
    </h2>
    <div class="row row_element">
      <div class="col-md-2">
        <strong>Name:</strong>
      </div>
      <div class="col-md-3 base-station-unit__name" >
        {{model.name}}
      </div>
      <div class="col-md-2"></div>

      <div class="col-md-2">
        <strong>Status:</strong>
      </div>
      <div class="col-md-3">
        {{model.status.name}}
      </div>
    </div>

    <div class="row row_element">
      <div class="col-md-2">
        <strong>Core Node:</strong>
      </div>
      <div class="col-md-3">
          {{model.coreNode.name}}
      </div>
      <div class="col-md-2"></div>
      <div class="col-md-2">
        <strong>Base Station Sectors:</strong>
      </div>
      <div class="col-md-3">
        {{#each sector in model.baseStationSectors}}
          {{sector.name}}
        {{/each}}
      </div>
    </div>
  </section>
</div>

<button type="button" class="btn btn-danger pull-right" data-toggle="modal" data-target="#prompt-modal"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button>
{{prompt-modal action="removeBaseStationUnit"}}
