<div class="container">
  <section class="row">
    <h2> Modulation </h2>
      <form class="form-horizontal">

      <h4><b>{{modulationResultSet}}</b></h4>

        <div class="form-group">
          <label class="col-sm-2 control-label">DL Min:</label>
          <div class="col-sm-10">
            {{view "select"
            content=modulationValues
            value=downlinkMin
            prompt="Please Select"}}
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label">DL Min:</label>
          <div class="col-sm-10">
            {{view "select"
            content=modulationValues
            value=downlinkMax
            prompt="Please Select"}}
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label">UL Min:</label>
          <div class="col-sm-10">
            {{view "select"
            content=modulationValues
            value=uplinkMin
            prompt="Please Select"}}
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label">DL Max:</label>
          <div class="col-sm-10">
            {{view "select"
            content=modulationValues
            value=uplinkMax
            prompt="Please Select"}}
          </div>
        </div>

      </form>
  </section>
</div>

<button type="button" class="btn btn-default pull-right" {{action 'updateModulation'}} >Save</button>

