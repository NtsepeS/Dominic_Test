<div class="client-links-header">
  <h2 class="sub-header client-links">
    Client Links
  </h2>

  <span class="client-links-actions">
    {{#link-to "client-links.new" class="btn btn-default btn-xs add-client-link" role="button"}}
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    Add Client Link
    {{/link-to}}
    <a class="btn btn-default btn-xs" href="/api/v1/client_links/export" role="button">
      <span class="glyphicon glyphicon-export" target="_blank" aria-hidden="true"></span>
      Export
    </a>
  </span>

</div>

{{#data-table}}
  <table class="table table-striped display js-client-links-table" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Title</th>
        <th>MSAD Number</th>
        <th>Solution ID</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
    {{#each clientLink in model}}
      {{#link-to 'client-link.site-information' clientLink.id tagName="tr"}}
        <td>{{clientLink.name}}</td>
        <td>{{clientLink.msadNumber}}</td>
        <td>{{clientLink.solutionIdentifier}}</td>
         <td>{{clientLink.status.name}}</td>
      {{/link-to}}
    {{/each}}
    </tbody>
  </table>
{{/data-table}}
