<h1>Core Nodes</h1>
<div class="row">
  <div class="col-md-3">
    <div class="well well-sm">
      <h4>MtMP Client Links</h4>
      <p>Core-Node:</p>
      {{view "select" content=model.name value=selectedName}}
    </div>
    <div class="well well-sm">
      <h4>Statuses</h4>
      <div class="status-option">
        <img alt="Brand" src="assets/images/icon-outage.svg">
        <a {{action "toggle" 'Decommissioned'}}>Decommissioned</a>
      </div>
      <div class="status-option">
        <img alt="Brand" src="assets/images/icon-cleared.svg">
        <a {{action "toggle" 'Operational'}}>Operational</a>
      </div>
      <div class="status-option">
        <img alt="Brand" src="assets/images/icon-threshold.svg">
        <a {{action "toggle" 'Commissioning'}}>Commissioning</a>
      </div>
    </div>

  </div>
  <div class="col-md-9">
    {{google-map nodes=selectedNodes}}
  </div>
</div>
