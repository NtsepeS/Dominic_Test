<div class="container">
  <section class="row">
    <h2>Service</h2>
    <div class="row show">
    <label class="col-sm-2 control-label">Line Tag:</label>
      {{model.linetag}}
    </div>
    <div class="row show">
      <label class="col-sm-2 control-label">Line Speed:</label>
        {{model.lineSpeed}} Mbps
    </div>
    <div class="row show">
      <label class="col-sm-2 control-label">VLAN:</label>
        {{model.vlan}}
    </div>

    <h3>Ports:</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>VLAN Type</th>
          <th>Acceptable Frame Type</th>
          <th>Default VLAN</th>
          <th>VLANs</th>
        </tr>
      </thead>
      <tbody>
      {{#each port in model.ports}}
        {{#link-to 'port' port.id tagName="tr"}}
          <td>{{port.vlanType}}</td>
          <td>{{port.acceptableFrameType}}</td>
          <td>{{port.defaultVlan}}</td>
          <td>{{port.service.vlansString}}</td>
        {{/link-to}}
      {{/each}}
      </tbody>
    </table>
    <div class="row pull-right">
      {{#link-to 'service.edit' model.id}}
      <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button>
      {{/link-to}}
      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete</button>
    </div>
  </section>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Delete Service</h4>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this item?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
        <button type="button" class="btn btn-warning" {{action "removeService"}}>Yes</button>
      </div>
    </div>
  </div>
</div>

