<div class="container">
  <section class="row">
    <h2>Service</h2>
    <div class="row show">
    <label class="col-sm-2 control-label">Line Tag:</label>
      {{model.linetag}}
    </div>
    <div class="row show">
      <label class="col-sm-2 control-label">Line Speed:</label>
        {{model.lineSpeed}} Mbps
    </div>
    <div class="row show">
      <label class="col-sm-2 control-label">VLAN:</label>
        {{model.vlan}}
    </div>

    <h3>Ports:</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>VLAN Type</th>
          <th>Acceptable Frame Type</th>
          <th>Default VLAN</th>
          <th>VLANs</th>
        </tr>
      </thead>
      <tbody>
      {{#each port in model.ports}}
        {{#link-to 'port' port.id tagName="tr"}}
          <td>{{port.vlanType}}</td>
          <td>{{port.acceptableFrameType}}</td>
          <td>{{port.defaultVlan}}</td>
          <td>{{port.service.vlan}}</td>
        {{/link-to}}
      {{/each}}
      </tbody>
    </table>
    <div class="row pull-right">
      <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> New Port</button>
      {{#link-to 'service.edit' model.id}}
      <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button>
      {{/link-to}}
      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#prompt-modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete</button>
    </div>
  </section>
</div>

{{prompt-modal action="removeService"}}

